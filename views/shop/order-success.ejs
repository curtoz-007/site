<!-- views/shop/order-success.ejs -->

<div class="text-center py-5">
    <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;" data-aos="zoom-in"></i>
    <h1 class="mt-3" data-aos="fade-up" data-aos-delay="100">Thank You For Your Order!</h1>
    <p class="lead" data-aos="fade-up" data-aos-delay="200">Your payment was successful and your order is being processed.</p>
    <div class="card d-inline-block p-3 bg-light" data-aos="fade-up" data-aos-delay="300">
        Your Order ID is: <strong class="fs-5">#<%= order.id %></strong>
    </div>
    <div class="mt-4" data-aos="fade-up" data-aos-delay="400">
        <a href="/" class="btn btn-primary">Continue Shopping</a>
        <a href="/admin/orders" class="btn btn-outline-secondary">View My Orders</a> <!-- Assuming a user profile page -->
    </div>
</div>