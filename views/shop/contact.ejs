<!-- Page Header -->
<div class="container text-center py-5">
    <h1 class="display-4 fw-bolder">Get in Touch</h1>
    <p class="lead text-muted">We'd love to hear from you. Whether you have a question about our products, pricing, or anything else, our team is ready to answer all your questions.</p>
</div>

<div class="container">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <!-- Left Side: Contact Form -->
            <div class="col-lg-6 p-5">
                <h3 class="fw-bolder mb-4">Send us a Message</h3>

                <!-- Success Message -->
                <% if (locals.success === 'true') { %>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> Thank you! Your message has been sent. We'll get back to you shortly.
                    </div>
                <% } %>

                <!-- Error Message -->
                <% if (locals.success === 'false') { %>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> Sorry, there was an error sending your message. Please try again later.
                    </div>
                <% } %>

                <!-- THE FIX IS HERE: The extra <form> tag has been removed -->
                <form action="/contact" method="POST">
                    <!-- Name Input -->
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                        <label for="name">Your Name</label>
                    </div>
                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                        <label for="email">Email address</label>
                    </div>
                    <!-- Message Textarea -->
                    <div class="form-floating mb-3">
                        <textarea class="form-control" placeholder="Leave a message here" id="message" name="message" style="height: 150px" required></textarea>
                        <label for="message">Message</label>
                    </div>
                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">Send Message</button>
                    </div>
                </form>
            </div>

            <!-- Right Side: Contact Details & Map -->
            <div class="col-lg-6 bg-light p-5">
                <h3 class="fw-bolder mb-4">Contact Information</h3>
                <div class="d-flex mb-3">
                    <i class="bi bi-geo-alt-fill fs-4 text-primary me-3"></i>
                    <div>
                        <strong>Address:</strong><br>
                        123 Design Lane, New York, NY 10012, US
                    </div>
                </div>
                <div class="d-flex mb-3">
                    <i class="bi bi-telephone-fill fs-4 text-primary me-3"></i>
                    <div>
                        <strong>Phone:</strong><br>
                        + 01 234 567 88
                    </div>
                </div>
                <div class="d-flex mb-4">
                    <i class="bi bi-envelope-fill fs-4 text-primary me-3"></i>
                    <div>
                        <strong>Email:</strong><br>
                        support@moderneshop.com
                    </div>
                </div>
                
                <!-- Embedded Google Map -->
                <div class="ratio ratio-16x9 rounded-3 overflow-hidden">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.622956299103!2d-73.99806208459427!3d40.74844097932824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a9b3117469%3A0xd134e199a405a163!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1633382833377!5m2!1sen!2sus" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>