<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4">My Orders & Downloads</h2>
            <p class="lead text-muted mb-5">Here you can find all the items you've purchased and access links for your digital content.</p>

            <% if (purchasedProducts.length === 0) { %>
                <div class="text-center p-5 border rounded bg-light">
                    <h3>You haven't purchased any items yet.</h3>
                    <p>Your purchased products and download links will appear here.</p>
                    <a href="/products" class="btn btn-primary mt-3">Start Shopping</a>
                </div>
            <% } else { %>
                <div class="list-group shadow-sm">
                    <% purchasedProducts.forEach(product => { %>
                        <div class="list-group-item p-4">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width: 80px; height: 80px; object-fit: cover;" class="img-thumbnail me-4 d-none d-sm-block">
                                    <div>
                                        <h5 class="mb-1"><%= product.name %></h5>
                                        <% if (product.isDigital && product.digitalFilePath) { %>
                                            <p class="mb-1 text-muted small">Click the button to access your downloadable file.</p>
                                        <% } else { %>
                                            <p class="mb-1 text-muted small">This is a physical product.</p>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <% if (product.isDigital && product.digitalFilePath) { %>
                                    <a href="<%= product.digitalFilePath %>" target="_blank" rel="noopener noreferrer" class="btn btn-success ms-3" download>
                                        Download <i class="bi bi-cloud-arrow-down-fill"></i>
                                    </a>
                                <% } else { %>
                                    <span class="badge bg-secondary ms-3">Physical Item</span>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>